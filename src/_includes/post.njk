---
layout: base.njk
---

<article class="post">
    {% if heroImage %}
    <div class="post-hero-image">
        <img src="{{ heroImage }}" alt="{{ heroImageAlt or title }}" class="hero-image">
    </div>
    {% endif %}
    <h1>{{ title }}</h1>
    {% if author or date %}
    <div class="byline">
        <img src="/2025.jpg" alt="Author avatar" class="avatar">
        <div class="byline-text">
            {% if author %}<span class="author">By {{ author }}</span>{% endif %}
            {% if date %}<span class="date">{{ date | dateFormat }}</span>{% endif %}
        </div>
    </div>
    {% endif %}

    {{ content | safe }}
</article>